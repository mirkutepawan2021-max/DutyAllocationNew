{
    "version": 2,
    "installCommand": "npm install --prefix client && npm install --prefix server",
    "buildCommand": "npm run build",
    "outputDirectory": "client/dist",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/dist/$1"
        }
    ]
}